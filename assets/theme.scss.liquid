table {
  background: transparent;
  color: $body-color;
  border: 1px solid $border-color;
  border-top: none;
  border-radius: 5px;
  border-collapse: separate;
  font-size: 14px;
  line-height: 22px;

  &.clean {
    border: none;
    border-radius: 0;
  }

  .column-title {
    display: none;
  }
}

td, th {
  border-top: 1px solid $border-color;

  .clean & {
    border: none;
  }
}

thead {

  th:first-child {
    border-radius: 5px 0 0 0;
  }

  th:last-child {
    border-radius: 0 5px 0 0;
  }
}

tbody tr:first-child {

  td:first-child,
  th:first-child {
    border-radius: 5px 0 0 0;
  }

  td:last-child,
  th:last-child {
    border-radius: 0 5px 0 0;
  }

  thead + & {
    td:first-child,
    th:first-child,
    td:last-child,
    th:last-child {
      border-radius: 0;
    }
  }
}

tbody tr:last-child {

  td:first-child,
  th:first-child {
    border-radius: 0 0 0 5px;
  }

  td:last-child,
  th:last-child {
    border-radius: 0 0 5px 0;
  }
}

th {
  @include compliment($body-background-color);
  padding: 15px;
  color: $heading-color;
}

td {
  border-left: 1px solid $border-color;
  padding: 30px;

  &:first-child {
    border-left: none;
  }
}

table.mobile-layout {
  border-bottom: none;

  .column-title {
    @include font($font-body, $font-weight: bolder);
    display: inline-block;
  }

  thead {
    display: none;
  }

  tr td {
    width: 100%;
    display: block;
    text-align: left;
    border-top: 1px solid $border-color !important;
    border-left: none;

    /* < IE 10 fix */
    float:left;
    clear:left;
  }

  td:last-child {
    border-bottom: none;
  }

  tr:last-child td:last-child {
    border-bottom: 1px solid $border-color !important;
  }
}

/* Buttons */

.button,
.submit,
button,
input[type="submit"],
input[type="button"] {
  @include font($font-button);
  background: $primary-button-background;
  line-height: normal;
  color: $primary-button-color;
  -webkit-appearance: none;
  display: inline-block;
  width: auto;
  padding: 15px 20px;
  cursor: pointer;
  border: none;
  border-radius: 5px;

  &:hover {
    background: hover($body-background-color, $primary-button-background);
    color: $primary-button-color;
  }

  {% if settings.button-font-small-caps %}
    font-size: 14px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  {% endif %}

  &.secondary {
    background: $secondary-button-background;
    color: $secondary-button-color;

    &:hover {
      background: hover($body-background-color, $secondary-button-background);
      color: $secondary-button-color;
    }
  }

  &.disabled {
    background: $disabled-button-background;
    color: $disabled-button-color;

    &:hover {
      background: $disabled-button-background;
      color: $disabled-button-color;
    }
  }
}

/* Forms & buttons */

form {

}

.input-wrapper {
  margin: 25px 0;

  label {
    display: block;
