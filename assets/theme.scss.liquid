  > *:first-child {
    margin-top: 0;
  }

  > *:last-child {
    margin-bottom: 0;
  }

  ul {
    list-style: disc;
  }

  ul, ol, dl {

  }

  li {
    margin: 11px 0;
  }

  blockquote {

  }
}

