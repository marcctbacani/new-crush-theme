      @for $i from 15 to 25 {
        @if $style == 'darken' {
          $test-color: darken($color, $i);
        } @else {
          $test-color: lighten($color, $i);
        }
        $test-contrast: contrast-ratio($background, $test-color);

        @if $test-contrast > $new-contrast {
          $new-contrast: $test-contrast;
          $hover-color: $test-color;
        }
      }
    }
  }

  @return $hover-color;
}

