  background-color: $body-background-color;
  color: $body-color;

  &.modal-overflow {
    overflow: hidden;
    position: relative;
  }
}

.main-content-wrapper {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  position: relative;
  padding: 0 30px;
  min-width: $min-width;
  max-width: $max-width + 60; // +60 for padding
  margin: 0 auto;

  @include lt-ie9 {
    max-width: $max-width;
  }

  @include breakpoint(m) {
    display: block;
    padding: 0 15px;
  }
}

.sidebar {
  @include breakpoint(m) {
    -webkit-box-ordinal-group: 4;
    -webkit-order: 3;
        -ms-flex-order: 3;
            order: 3;
  }
}

.main-content {
  width: 65%;
  margin: 0 auto;

  @include breakpoint(l) {
    width: 80%;
  }

  @include breakpoint(m) {
    width: 100%;
  }

  .sidebar-enabled & {
    padding-bottom: 50px;
  }
}

.rte .tabs {
  position: relative;
  display: block;
  max-width: 100%;
  height: 42px;
  padding: 0;
  margin: 30px 0 0 30px;
  white-space: nowrap;
  text-align: left;
  overflow: hidden;
  z-index: 10;

  li {
    display: inline-block;
    height: 41px;
    font-size: 14px;
    line-height: 42px;
    padding: 0 16px;
    margin: 0;
    border: 1px solid transparent;
    border-bottom: none;
    cursor: pointer;
    color: $heading-color;

    &.active {
      border-color: $border-color;
      height: 42px;
      border-radius: 5px 5px 0 0;
      background: $body-background-color;
    }
  }
}

.rte .tabs-content {
  display: block;
  width: 100%;
  position: relative;
  top: -1px;
  z-index: 5;
  padding: 30px;
  margin: 0 0 30px;
  overflow: hidden;
  border: 1px solid $border-color;
  border-radius: 5px;

  > li {
    display: none;
    margin: 0;

    > *:first-child {
      margin-top: 0;
    }

    > *:last-child {
      margin-bottom: 0;
    }

    &.active { display: block; }
  }
}

.modal-wrapper {
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba($body-background-color, 0.7);
  z-index: 9999;
  @include opacity(0);

  @include transition(opacity 0.3s $ease-out-quad);

  &.active,
  &.opening {
    display: block;
  }

  &.opening,
  &.open {
    @include opacity(1);
  }

  .modal-overflow & {
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
  }

  @include breakpoint(s) {
    padding-bottom: 30px;
  }
}

.modal-content {
  position: absolute;
  top: 55%;
  left: 50%;
  width: 60%;
  max-width: 640px;
  padding: 30px;
  background: $body-background-color;
  border: 1px solid $border-color;
  @include opacity(0);

  @include breakpoint(l) {
    width: 70%;
  }

  @include breakpoint(m) {
    width: 80%;
  }

  @include breakpoint(s) {
    position: relative;
    margin: 0 0 30px !important;
    top: 15px !important;
    left: 15px !important;
    width: calc(100% - 30px);
    padding: 70px 15px 15px;

    @include lt-ie9 {
      width: 100%;
    }
  }

  @include transition(opacity 0.3s $ease-out-quad, top 0.3s $ease-out-quad);

  .open & {
    top: 50%;
    @include opacity(1);
  }

  .modal-overflow & {
    top: 30px!important;
    margin-bottom: 30px;
  }
}

.modal-close-secondary {
  @extend .meta;
  position: absolute;
  top: 30px;
  right: 30px;
  line-height: 1;
  cursor: pointer;
  color: $meta-color-secondary;

  &:hover {
    color: $meta-color;
  }

  &:after {
    content: '\E010';
    top: 3px;
    position: relative;
    margin-left: 5px;
    @include icon-font(25px, 0);
  }

  @include breakpoint(s) {
    right: 50%;
    margin-right: -35px;
  }
}

.modal-title {
  margin-top: 0;
}

.placeholder-svg {
  min-height: 25vh;

  .home-slideshow & {
    min-height: 66vh;

    .sidebar-enabled & {
      min-height: 44vh;

      @media screen and (max-width: 720px) { min-height: 25vh; }
      @media screen and (max-width: 542px) { min-height: 200px; }
    }

    @media screen and (max-width: 720px) { min-height: 25vh; }
    @media screen and (max-width: 542px) { min-height: 200px; }
  }
}

.placeholder-background {
