input, textarea {
  width: 100%;
  max-width: 670px;
  font-family: inherit;

  &[type="checkbox"],
  &[type="radio"] {
    width: auto;
  }

  &:focus {
    outline: none;
  }
}

input[type="text"],
input[type="email"],
input[type="password"],
input[type="search"],
input[type="telephone"],
input[type="tel"],
input[type="number"],
textarea {
  -webkit-appearance: none;
  border: 1px solid $border-color;
  border-radius: 5px;
  background: $body-background-color;
  color: $body-color;
  display: block;
  padding: 14px 15px 9px;
  font-size: 14px;

  -webkit-box-sizing: border-box;
  box-sizing: border-box;

  @include placeholder {
    color: ligthen($body-color,30%);
  }

  &.error,
  .error & {
    color: $error-color;
    border: 1px solid $error-color;

    @include placeholder {
      color: lighten($error-color,30%);
    }
  }

  @include breakpoint(s) {
    font-size: 16px; // removes zoom on focus in iOS
  }
}

.error-message,
.errors {
  color: $error-color;
}

input[type="password"] {
  @include lt-ie9 {
    font-family: Arial, sans-serif;
  }
}

textarea {

}

select {
  max-width: 100%;

  @include breakpoint(s) {
    font-size: 16px; // removes zoom on focus in iOS
  }
}

.select-wrapper {
  cursor: pointer;
  border: 1px solid $border-color;
  position: relative;
  font-size: 14px;
  border-radius: 5px;
  padding: 14px 25px 9px 15px;

  .select-text {
    overflow: hidden;
  }

  label + & {
    margin-top: 10px;
  }

  @include compliment($body-background-color);

  &:after {
    content: '\E007';
    position: absolute;
    right: 15px;
    top: 50%;
    margin-top: -7px;
    @include icon-font();
  }

  select {
    @extend %cover;
    color: black;
    cursor: pointer;
    z-index: 2;
    width: 100%; /* needed for Firefox */
    height: 100%; /* needed for IE */
    -webkit-appearance: none;
    @include opacity(0);
  }

}

/* iframes and embeds */

iframe {
  border: none;
}

/* RTE areas */

.rte {

