{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% assign item = product %}
{% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}

<div class="product-list-item demo">

  {% if productTextStyle == 'overlay' %}
    <a class="product-list-item-overlay-link" href="#"></a>
  {% endif %}

  <figure class="product-list-item-thumbnail">
    <a href="#">
      {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
    </a>
  </figure>

  {% if productTextStyle == 'overlay' %}
    <div class="product-list-item-details-wrapper">
  {% endif %}

    <div class="product-list-item-details">
      <p class="product-list-item-vendor vendor meta">
        {% comment %}ly_i18n_replace_for_[ 'onboarding.product.vendor' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'onboarding.product.vendor' | t }}{% endcapture %}{% include 'ly-static-string' with '9425210' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}
      </p>

      <h3 class="product-list-item-title">
        <a href="#">{% comment %}ly_i18n_replace_for_[ 'onboarding.product.title' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'onboarding.product.title' | t }}{% endcapture %}{% include 'ly-static-string' with '9425211' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</a>
      </h3>

      <p class="product-list-item-price">
        <span class="price">
          {% comment %}ly_i18n_replace_for_[ 'products.product.from' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'products.product.from' | t }}{% endcapture %}{% include 'ly-static-string' with '9425212' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %} <span class="money">$19.99</span>
        </span>
      </p>
    </div>

  {% if productTextStyle == 'overlay' %}
    </div>
  {% endif %}

</div>
